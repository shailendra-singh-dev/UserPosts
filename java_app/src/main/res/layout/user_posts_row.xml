<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="0dp"
    app:cardElevation=".5dp"
    app:cardMaxElevation=".5dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <RelativeLayout
            android:id="@+id/user_avatar_parent"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/user_avatar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginEnd="15dp"
                android:layout_alignParentStart="true"
                android:src="@color/button_bg" />

            <TextView
                android:textColor="@color/accent"
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:layout_toEndOf="@id/user_avatar"
                android:textSize="20sp" />

        </RelativeLayout>

        <TextView
            android:textColor="@color/accent"
            android:layout_margin="5dp"
            android:id="@+id/user_post_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_avatar_parent"
            android:textSize="18sp" />

        <TextView
            android:textColor="@color/accent"
            android:layout_margin="5dp"
            android:id="@+id/user_post_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_post_title"
            android:textSize="15sp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
